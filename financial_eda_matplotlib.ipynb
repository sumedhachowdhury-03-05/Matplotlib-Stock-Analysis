Python

# Cell 1: Setup and Data Generation

import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import matplotlib.dates as mdates

plt.style.use('seaborn-v0_8-whitegrid') 

# Generate dates for 252 trading days (approx 1 year)
dates = pd.to_datetime(pd.date_range('2024-01-01', periods=252, freq='B'))

np.random.seed(42) # for reproducibility
initial_price = 150
daily_returns = np.random.normal(loc=0.0002, scale=0.015, size=252)
prices = initial_price * (1 + daily_returns).cumprod()

df = pd.DataFrame({'Close': prices}, index=dates)

df['Daily Return'] = df['Close'].pct_change() * 100

print("Data Head:\n", df.head())
print("\nData Shape:", df.shape)

Cell 2: Visualization 1 - Time Series Trend (Line Plot)
Python

# Cell 2: Visualization 1 - Time Series Trend (Line Plot)

fig, ax = plt.subplots(figsize=(12, 6))

ax.plot(df.index, df['Close'], 
        label='Closing Price (USD)', 
        color='#1f77b4', 
        linewidth=2.5)

ax.set_title('Stock Price Trend Over One Year', 
             fontsize=18, 
             fontweight='bold', 
             pad=15)
ax.set_xlabel('Date', fontsize=14)
ax.set_ylabel('Price (USD)', fontsize=14)

ax.xaxis.set_major_formatter(mdates.DateFormatter('%b %Y'))
ax.tick_params(axis='x', rotation=45)

ax.legend(loc='upper left', fontsize=12)
ax.grid(axis='y', linestyle='--', alpha=0.7)

peak_idx = df['Close'].idxmax()
peak_price = df['Close'].max()
ax.annotate(f'Peak: ${peak_price:.2f}', 
            xy=(peak_idx, peak_price), 
            xytext=(peak_idx - pd.Timedelta(days=60), peak_price - 10),
            arrowprops=dict(facecolor='red', shrink=0.05, width=1, headwidth=8),
            fontsize=12, color='red')

plt.tight_layout() # Adjust layout to prevent labels from overlapping
plt.show()

Cell 3: Visualization 2 - Distribution (Histogram)
Python

# Cell 3: Visualization 2 - Distribution (Histogram)

fig, ax = plt.subplots(figsize=(10, 5))

ax.hist(df['Daily Return'].dropna(), 
        bins=50, 
        color='darkgreen', 
        edgecolor='black', 
        alpha=0.7, 
        density=True, 
        label='Daily Return Distribution')

ax.set_title('Distribution of Daily Returns', 
             fontsize=18, 
             fontweight='bold', 
             pad=15)
ax.set_xlabel('Daily Return (%)', fontsize=14)
ax.set_ylabel('Probability Density', fontsize=14)

mean_return = df['Daily Return'].mean()
ax.axvline(mean_return, 
           color='red', 
           linestyle='--', 
           linewidth=2, 
           label=f'Mean Return: {mean_return:.2f}%')

ax.legend(loc='upper right', fontsize=12)

plt.tight_layout()
plt.show()
